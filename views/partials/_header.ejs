<style>
  .btn_login_header {
    padding: 6px 18px;
    color:#222222;
    background-color:transparent;
    border:2px #222222 solid;
    border-radius:5px;
  }
  .input_username_header {
    width: 150px; 
    margin-right: 0.5em; 
    padding: 6px;
    border:2px #63a54e solid;
    border-radius:5px;
  }
  .textblog_username_header{
    width: 150px; 
    margin-right: 0.5em; 
    padding: 6px;
  }
  .div_rightCorner_header {
    margin-left: 60%;
    vertical-align:right;
  }
</style>
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <tr>
          <td>
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
       </td>
      </div>
      <div class="div_rightCorner_header" >
        <td >
         <% if(username) { %>
            <td>
            <p class="textblog_username_header">Logged In As: <%= username %> !</p>
            </td>
            <td>
            <button type="button" class="btn_login_header" >Logout</button>
            </td>
        <% } else { %>
          <form action="/login" method="POST">
            <input type="text" name="username" placeholder="User Name" class="input_username_header">
            <button type="Submit" class="btn_login_header" >Login</button>
          </form>
        <% } %>
        </td>
        </tr>
      </div>
    </div>
  </nav>
</header>
